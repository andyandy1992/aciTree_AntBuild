<?xml version="1.0" encoding="UTF-8" ?>
<project name="build_tree.json" default="job">

	<!-- Use ant contrib -->
	<taskdef resource="net/sf/antcontrib/antlib.xml" />

	<!-- ======================================================================== -->
	<!-- Source Properties -->
	<property name="content.root" value="../" />
	<property name="contentpath" value="content" />
	<property name="end.location" value="../web/json/toc.json" />

	<!-- ======================================================================== -->

	<!-- Import Scripts -->
	<import file="./build.json_helpers.xml" />

	<!-- The main build targets -->
	<target name="job" depends="setup,build,copy.to.correct.location" />

	<target name="setup" depends="delete.tree.json,create.tree.json" />
	<target name="build" depends="build.base" />

</project>
